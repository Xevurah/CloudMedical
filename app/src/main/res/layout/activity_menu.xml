<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202732"
    tools:context=".MenuActivity"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/authLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:stretchColumns="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/button_rounded"
            >

            <TableRow
                android:id="@+id/UserRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <!-- first element of the row-->
                <ImageView
                    android:id="@+id/UserImageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="12dp"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/persona_i" />

                <TextView

                    android:id="@+id/UserTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-black"
                    android:gravity="start"
                    android:paddingStart="15dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="15dp"
                    android:text="User"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </TableRow>
        </TableLayout>

        <TableLayout

            android:id="@+id/tableLayout2"
            android:layout_width="0dp"
            android:layout_height="315dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout">

            <TableRow
                android:id="@+id/UserDataRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- first element of the row-->

                <TextView
                    android:id="@+id/UserDataView"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="17dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_vertical"
                    android:text="Datos del usuario"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_span="3"
                    />

            </TableRow>

            <TableRow
                android:id="@+id/BmpRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- first element of the row-->

                <ImageView
                    android:id="@+id/HeartView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/corazon_i" />

                <TextView
                    android:id="@+id/FrequencyText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:paddingEnd="15dp"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/FrequencyLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="Frecuencia Cardiaca (ppm)"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </TableRow>

            <TableRow
                android:id="@+id/FootstepRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- first element of the row-->

                <ImageView
                    android:id="@+id/FootstepView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/feet_i" />

                <TextView
                    android:id="@+id/FootstepText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:paddingEnd="15dp"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/FootstepLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="Pasos (#)"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </TableRow>

            <TableRow
                android:id="@+id/BatteryRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- first element of the row-->

                <ImageView
                    android:id="@+id/BatteryView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/battery_i" />

                <TextView
                    android:id="@+id/BatteryText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:paddingEnd="15dp"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/BatteryLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="Bateria del dispositivo (%)"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </TableRow>

            <TableRow
                android:id="@+id/WeightRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- first element of the row-->

                <ImageView
                    android:id="@+id/WeightView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:padding="7dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/weig_i" />

                <TextView
                    android:id="@+id/WeightText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:paddingEnd="15dp"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/WeightLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="Peso (kg)"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </TableRow>

            <TableRow
                android:id="@+id/HeightRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- first element of the row-->

                <ImageView
                    android:id="@+id/HeightView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/heig_i" />

                <TextView
                    android:id="@+id/HeightText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:paddingEnd="15dp"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/HeightLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="Estatura (cm)"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </TableRow>
        </TableLayout>

        <TableLayout

            android:id="@+id/tableLayout3"
            android:layout_width="0dp"
            android:layout_height="215dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout2">

            <TableRow
                android:id="@+id/ActionDataRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- first element of the row-->

                <TextView
                    android:id="@+id/ActionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="17dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_vertical"
                    android:text="Acciones"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>

            </TableRow>
            <TableRow
                android:id="@+id/ConnectRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- first element of the row-->

                <Button
                    android:id="@+id/ConnectButton"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="17dp"
                    android:paddingStart="78dp"
                    android:paddingEnd="78dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/button_rounded_menu"
                    android:text="Conectar con MiBand"/>

            </TableRow>
            <TableRow
                android:id="@+id/DiagRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- first element of the row-->

                <Button
                    android:id="@+id/DiagButton"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="17dp"
                    android:paddingStart="78dp"
                    android:paddingEnd="78dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/button_rounded_menu"
                    android:text="Nuevo diagnostico"/>

            </TableRow>
            <TableRow
                android:id="@+id/LastDiagRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- first element of the row-->

                <Button
                    android:id="@+id/LastDiagButton"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="17dp"
                    android:paddingStart="78dp"
                    android:paddingEnd="78dp"
                    android:layout_marginEnd="17dp"
                    android:background="@drawable/button_rounded_menu_border"
                    android:layout_marginBottom="5dp"
                    android:text="Ver ultimo diagnostico"/>

            </TableRow>

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>